<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailDokterFragment">

    <ImageView
        android:id="@+id/ic_goback"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:onClick="goBackButton"
        android:src="@drawable/ic_arrow_back_24" />

    <TextView
        android:id="@+id/title_page"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ic_goback"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Dr. Boy William" />

    <ScrollView
        android:layout_below="@id/title_page"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@id/inputchat"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        col -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--            Baris -->

<!--            chat kanan -->

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/blue_primary"
                app:contentPadding="20dp"
                android:layout_width="250dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_regular"
                    android:textColor="@color/white"
                    android:justificationMode="inter_word"
                    android:text="About Lorem ipsum is simply dummy text.." />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00"/>

<!--            end chat kanan -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>


            <!--            chat kiri -->
            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/white"
                android:layout_gravity="left"
                app:contentPadding="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_regular"
                    android:justificationMode="inter_word"
                    android:text="About Lorem ipsum is simply dummy text of the printing and typesetting industry." />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:10"/>

            <!--            end chat kiri -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <!--            chat kanan -->

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/blue_primary"
                app:contentPadding="20dp"
                android:layout_width="250dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_regular"
                    android:textColor="@color/white"
                    android:justificationMode="inter_word"
                    android:text="About ?" />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"/>

            <!--            end chat kanan -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>


            <!--            chat kiri -->
            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/white"
                android:layout_gravity="left"
                app:contentPadding="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_regular"
                    android:justificationMode="inter_word"
                    android:text="About Lorem ipsum is simply dummy text of the printing and typesetting industry." />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"/>

            <!--            end chat kiri -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <!--            chat kanan -->

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/blue_primary"
                app:contentPadding="20dp"
                android:layout_width="250dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_regular"
                    android:textColor="@color/white"
                    android:justificationMode="inter_word"
                    android:text="About Lorem ipsum is simply dummy text of the printing and typesetting industry." />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:00"/>

            <!--            end chat kanan -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>
        <!--        End Col -->

    </ScrollView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputchat"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:hint="Tulis pesan di sini"
            style="@style/text_input"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/btn_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_send_24"/>

</RelativeLayout>