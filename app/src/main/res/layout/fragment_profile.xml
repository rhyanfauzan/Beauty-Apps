<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <View
        android:id="@+id/view1"
        android:background="@drawable/rounded_profile"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </View>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoprofil"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-120dp"
        android:src="@drawable/drboy2" />

    <TextView
        android:id="@+id/nama"
        android:layout_marginTop="16dp"
        android:layout_below="@id/fotoprofil"
        style="@style/h1_bannertext"
        android:textColor="@color/dark"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:text="Patrick Jose"/>

    <TextView
        android:id="@+id/email"
        style="@style/text_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxWidth="200dp"
        android:text="patrick.jose@gmail.com" />

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            Baris -->
            <RelativeLayout
                android:background="@drawable/rounded_profilelist"
                android:padding="16dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/p1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_profile"/>

                <TextView
                    android:id="@+id/pn1"
                    android:layout_toRightOf="@id/p1"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    style="@style/text_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Profil"/>

                <ImageView
                    android:id="@+id/ic1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_rightback"/>

            </RelativeLayout>

            <!--            Baris 2 -->
            <RelativeLayout
                android:background="@drawable/rounded_profilelist"
                android:padding="16dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/p2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_profile"/>

                <TextView
                    android:id="@+id/pn2"
                    android:layout_toRightOf="@id/p2"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    style="@style/text_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"/>

                <ImageView
                    android:id="@+id/ic2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_rightback"/>

            </RelativeLayout>

            <!--            Baris 3-->
            <RelativeLayout
                android:background="@drawable/rounded_profilelist"
                android:padding="16dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/p3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_profile"/>

                <TextView
                    android:id="@+id/pn3"
                    android:layout_toRightOf="@id/p3"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    style="@style/text_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>

                <ImageView
                    android:id="@+id/ic3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_rightback"/>

            </RelativeLayout>

            <!--            Baris 4-->
            <RelativeLayout
                android:background="@drawable/rounded_profilelist"
                android:padding="16dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/p4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_profile"/>

                <TextView
                    android:id="@+id/pn4"
                    android:layout_toRightOf="@id/p4"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    style="@style/text_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis kelamin"/>

                <ImageView
                    android:id="@+id/ic4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_rightback"/>

            </RelativeLayout>

            <!--            Baris 5-->
            <RelativeLayout
                android:background="@drawable/rounded_profilelist"
                android:padding="16dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/p5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_profile"/>

                <TextView
                    android:id="@+id/pn5"
                    android:layout_toRightOf="@id/p5"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    style="@style/text_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"/>

                <ImageView
                    android:id="@+id/ic5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_rightback"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <!--            Logout -->
            <RelativeLayout
                android:background="@drawable/rounded_btn_border"
                android:padding="16dp"
                android:elevation="5dp"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/p6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_profile"/>

                <TextView
                    android:id="@+id/pn6"
                    android:layout_toRightOf="@id/p6"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    style="@style/text_regular"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>